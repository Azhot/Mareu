<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <!-- Filter icon looks -->
    <style name="FilterMenuIcon" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter_icon</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <!-- Launcher activity theme -->
    <style name="AppTheme.LauncherTheme" parent="AppTheme">
        <item name="android:actionOverflowButtonStyle">@style/FilterMenuIcon</item>
    </style>

    <!-- Removes action bar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Hint item style -->
    <style name="hintItemStyle">
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Spinner item style -->
    <style name="spinnerItemStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Dropdown spinner style -->
    <style name="spinnerDropDownItemStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/standard_padding</item>
    </style>

</resources>
